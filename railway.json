{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=production -Dserver.port=$PORT -jar target/voice-detection-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/api/voice-interaction/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE"
  }
} 